{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true,
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^@common/(.*)$": "<rootDir>/../src/common/$1",
    "^@configs/(.*)$": "<rootDir>/../src/configs/$1"
  }
}

